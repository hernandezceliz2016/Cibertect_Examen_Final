@model IEnumerable<ExamenFinal.Model.Libro>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="#" onclick="getModal('@Url.Action("Crear",new { area="Libro"})'); return false;"
       data-toggle="modal" data-target="#modal-container"
       class="btn btn-success btn-sm">
        <span class="glyphicon glyphicon-edit"></span> Edit
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_pud)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.avanzar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.familia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ventas_ytd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.notas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechapub)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_pud)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.avanzar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.familia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ventas_ytd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.notas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechapub)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_titulo }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_titulo }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_titulo })
        </td>
    </tr>
}

</table>
